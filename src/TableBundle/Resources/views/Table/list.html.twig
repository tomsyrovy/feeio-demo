<h4><i class="fa fa-fw fa-table"></i> Nastaven√≠ tabulek</h4>

<div class="panel panel-default">

    <div class="table-responsive">
        <table class="table table-hover table-table">
            <thead>
            <tr>
                <th data-cell="A1">
                    Tabulka
                </th>
                <th>
                    <!-- Akce -->
                </th>
            </tr>
            </thead>

            <tbody>

            {% for table in tables %}

                <tr>
                    <td data-cell="A{{ loop.index }}">
                        <a title="Nastavit" href="{{ path('table_table_edit', {'table_id' : table.id}) }}">{{ table.title }}</a>
                    </td>
                    <td class="text-right">
                        <a title="Nastavit" class="btn btn-default btn-sm" href="{{ path('table_table_edit', {'table_id' : table.id}) }}"><i class="fa fa-fw fa-gears"></i></a>
                    </td>
                </tr>

            {% endfor %}

            </tbody>

        </table>

    </div> <!-- .table-responsive -->

</div> <!-- .panel panel-default -->