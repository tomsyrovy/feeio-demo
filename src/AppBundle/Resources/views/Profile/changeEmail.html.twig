{% extends "::layout-secured-simple.html.twig" %}
{% set title = "Změna přihlašovacího e-mailu" %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-create-profile {{ parent() }}{% endblock %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}


	<div class="row">

		<a class="btn btn-info" title="Zpět" href="{{ path('app_profile_edit') }}"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>

		<div class="col-lg-12">
			<div class="page-header text-center">
				<h2><i class="fa fa-fw fa-user"></i> Změna přihlašovacího e-mailu</h2>
			</div>
		</div> <!-- .col-lg-12 -->

		<div class="col-lg-4 col-lg-offset-4">

			<div class="panel panel-default">
				<div class="panel-body">
					{{ form_start(form) }}

					{{ form_widget(form) }}

					<div class="text-center">
						<input type="submit" class="btn-primary btn" value="Uložit">
					</div> <!-- .text-center -->

					{{ form_end(form) }}
				</div> <!-- .panel-body -->
			</div> <!-- .panel -->

			<p class="text-info text-center"><i class="fa fa-fw fa-info-circle"></i> Nezapomeňte, že pokud změníte e-mail, musíte se pod tímto e-mailem i přihlašovat.</p>

		</div> <!-- .col-lg-6 -->


	</div> <!-- .row -->


{% endblock %}