{% extends "::layout-secured-simple.html.twig" %}
{% set title = "Úprava pracovní pozice ve společnosti " ~ company.name %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-activity-create {{ parent() }}{% endblock %}

{% block content %}


    <div class="row">

        <div class="col-lg-12">
            <a class="btn btn-info" title="Zpět" href="{{ path('app_jobposition_list', {'company_id': company.id}) }}"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>

            <div class="page-header text-center">
                <h2><i class="fa fa-fw fa-tags"></i> {{ title }}</h2>
                <p><i class="fa fa-fw fa-info"></i> Úprava má vliv pouze na nové klienty.</p>
            </div>
        </div> <!-- .col-lg-12 -->


        {% include "AppBundle:JobPosition/inc:form.html.twig" with {"form" : form, "submitLabel" : "Upravit"} %}


    </div> <!-- .row -->


{% endblock %}