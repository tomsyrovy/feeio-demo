{% extends "::layout-secured-simple.html.twig" %}
{% set title = "Nová kampaň pro klienta " ~ client.code %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-contact-create {{ parent() }}{% endblock %}


{% block content %}


    <div class="row">

        <div class="col-lg-12">
            <a class="btn btn-info" title="Zpět" href="{{ path('app_client_detail', {'client_id': client.id}) }}"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>

            <div class="page-header text-center">
                <h2><i class="fa fa-fw fa-briefcase"></i> {{ title }}</h2>
            </div>
        </div> <!-- .col-lg-12 -->

        {% include "@App/Campaign/inc/form.html.twig" with {"form" : form, "submitLabel" : "Vytvořit"} %}


    </div> <!-- .row -->


{% endblock %}

{% block javascripts %}

    {{ parent() }}

    {% include '@App/Campaign/inc/formJS.html.twig' %}

{% endblock %}
