{% extends "::layout-secured-simple.html.twig" %}
{% if commission %}
    {% set title = "Nový náklad pro " ~ commission.name %}
{% else %}
    {% set title = "Nový náklad" %}
{% endif %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-cost-create {{ parent() }}{% endblock %}

{% block content %}


        <div class="row">

            <div class="col-lg-12">
                <a class="btn btn-info" title="Zpět" href="javascript:history.back()"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>

                <div class="page-header text-center">
                    <h2><i class="fa fa-fw fa-money"></i> {{ title }}</h2>
                </div>
            </div> <!-- .col-lg-12 -->


            {% include "@App/Cost/inc/costForm.html.twig" with {"form" : form, "submitLabel" : "Vytvořit"} %}


        </div> <!-- .row -->


{% endblock %}

{% block javascripts %}

    {{ parent() }}

    {% include '@App/Cost/inc/costFormJS.html.twig' %}

{% endblock %}
