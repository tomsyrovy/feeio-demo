{% extends "::layout-secured-simple.html.twig" %}
{% set title = "Pozvat uživatele do společnosti " ~ company.name %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-invitation-create {{ parent() }}{% endblock %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}


    <div class="row">

        <div class="col-lg-12">
            <a class="btn btn-info" title="Zpět" href="{{ path('app_company_detail', {'company_id': company.id}) }}"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>

            <div class="page-header text-center">
                <h2><i class="fa fa-fw fa-building"></i> Pozvat uživatele do společnosti</h2>
            </div>
        </div> <!-- .col-lg-12 -->



        <div class="col-lg-4 col-lg-offset-4">

            <div class="panel panel-default">
                <div class="panel-body">

                    {{ form_start(form) }}


                    {{ form_widget(form) }}
                    {{ form_errors(form) }}
                    <div class="text-center">
                        <input class="btn btn-primary" type="submit" value="Pozvat">
                    </div>
                    {{ form_end(form) }}


                </div> <!-- .panel-body -->
            </div> <!-- .panel -->

        </div> <!-- .col-lg-6 -->


    </div> <!-- .row -->


{% endblock %}
