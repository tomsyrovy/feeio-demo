{% extends "::layout-secured-simple.html.twig" %}
{% set title = "Úprava kontaktu" %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-contact-create {{ parent() }}{% endblock %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}


    <div class="row">

        <div class="col-lg-12">
            <a class="btn btn-info" title="Zpět" href="{{ path('app_contact_list') }}"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>

            <div class="page-header text-center">
                <h2><i class="fa fa-fw fa-briefcase"></i> Úprava kontaktu</h2>
            </div>
        </div> <!-- .col-lg-12 -->



        <div class="col-lg-6 col-lg-offset-3">


            <div class="row">
                <div class="col-lg-12">
                    <ul class="nav nav-tabs nav-tabs-light nav-justified">
                        <li role="presentation" class="active">
                            <a href="#basic-info" aria-controls="basic-info" role="tab" data-toggle="tab">
                                Základní údaje
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#other-info" aria-controls="other-info" role="tab" data-toggle="tab">
                                Další údaje
                            </a>
                        </li>
                    </ul>
                </div> <!-- .col-lg-12 -->
            </div> <!-- .row -->





            <div class="panel panel-default panel-nav-tabs">
                <div class="panel-body">

                    {{ form_start(form) }} <!-- začne formulář -->

                    <div class="tab-content">





                        <!-- 1. záložka -->
                        <div role="tabpanel" class="tab-pane active" id="basic-info">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_label(form.company) }} <!-- vykreslí popisek pro políčko společnost - to chceme -->
                                        {{ form_widget(form.company) }} <!-- vykreslí políčko pro společnost - to chceme (nikde se neřeší, zda-li je to input, nebo select, nebo checkbox - to řeší backend sám) -->
                                        {{ form_errors(form.company) }} <!-- vykreslí prostor, kde se budou psát chybové hlášky pro políčko společnost - to chceme -->
                                    </div> <!-- .form-group -->
                                </div> <!-- .col-lg-6 -->

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_label(form.type) }}
                                        {{ form_widget(form.type) }}
                                        {{ form_errors(form.type) }}
                                    </div> <!-- .form-group -->
                                </div> <!-- .col-lg-6 -->
                            </div> <!-- .row -->


                            <div class="form-group">
                                {{ form_label(form.vatnumber) }}
                                {{ form_widget(form.vatnumber) }}
                                {{ form_errors(form.vatnumber) }}
                            </div> <!-- .form-group -->

                            <div class="form-group text-center">
                                <button id="btn-import-by-in" class="btn btn-block btn-default" type="button" name="button">
                                    <i class="fa fa-fw fa-spinner fa-pulse fa-ares-loading"></i>
                                    Předvyplnit údaje z ARES
                                </button>
                            </div> <!-- .form-group -->


                            <div class="form-group">
                                {{ form_label(form.taxnumber) }}
                                {{ form_widget(form.taxnumber) }}
                                {{ form_errors(form.taxnumber) }}
                            </div> <!-- .form-group -->


                            <div class="form-group{% if not form.title.vars.valid %} has-error{% endif %}">
                                {{ form_label(form.title) }}
                                {{ form_widget(form.title) }}
                                {{ form_errors(form.title) }}
                            </div> <!-- .form-group -->


                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_label(form.street) }}
                                        {{ form_widget(form.street) }}
                                        {{ form_errors(form.street) }}
                                    </div> <!-- .form-group -->
                                </div> <!-- .col-lg-6 -->

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_label(form.number) }}
                                        {{ form_widget(form.number) }}
                                        {{ form_errors(form.number) }}
                                    </div> <!-- .form-group -->
                                </div> <!-- .col-lg-6 -->
                            </div> <!-- .row -->


                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_label(form.city) }}
                                        {{ form_widget(form.city) }}
                                        {{ form_errors(form.city) }}
                                    </div> <!-- .form-group -->
                                </div> <!-- .col-lg-6 -->

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        {{ form_label(form.zipcode) }}
                                        {{ form_widget(form.zipcode) }}
                                        {{ form_errors(form.zipcode) }}
                                    </div> <!-- .form-group -->
                                </div> <!-- .col-lg-6 -->
                            </div> <!-- .row -->


                            <div class="form-group">
                                {{ form_label(form.country) }}
                                {{ form_widget(form.country) }}
                                {{ form_errors(form.country) }}
                            </div> <!-- .form-group -->
                        </div> <!-- .tab-pane -->





                        <!-- 2. záložka -->
                        <div role="tabpanel" class="tab-pane" id="other-info">
                            <div class="form-group">
                                {{ form_label(form.website) }}
                                {{ form_widget(form.website) }}
                                {{ form_errors(form.website) }}
                            </div> <!-- .form-group -->


                            <div class="form-group">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div> <!-- .form-group -->


                            <div class="form-group">
                                {{ form_label(form.telephone) }}
                                {{ form_widget(form.telephone) }}
                                {{ form_errors(form.telephone) }}
                            </div> <!-- .form-group -->


                            <div class="form-group">
                                {{ form_label(form.bankaccountnumber) }}
                                {{ form_widget(form.bankaccountnumber) }}
                                {{ form_errors(form.bankaccountnumber) }}
                            </div> <!-- .form-group -->


                            <div class="form-group">
                                {{ form_label(form.iban) }}
                                {{ form_widget(form.iban) }}
                                {{ form_errors(form.iban) }}
                            </div> <!-- .form-group -->
                        </div> <!-- .tab-pane -->
                    </div> <!-- .tab-content -->





                    <div class="text-center">
                        <input class="btn btn-primary" type="submit" value="Uložit">
                        <!-- mezi začátek a konec je možné vkládat vlastní formulářové prvky, ale pokud nejsou vloženy i na backendu, tak nebudou zpracovány -->
                    </div>

                    {{ form_end(form) }} <!-- skončí formulář (dovykreslí nevykreslené prvky formuláře a poté ukončovací značku) -->

                    <!-- a takto to je všechno - určitě budeš potřebovat vědět, jaké jsou názvy (name) prvků ve formuláři - tyto names zjistíš tak, že si dáš vykreslit celý formulář a v kodu v prohližeči to najdeš, nebo si otevřeš soubor, který definuje formulář (resp. formulářový typ: src/AppBundle/Form/Type/ContactFormType.php) -->


                </div> <!-- .panel-body -->
            </div> <!-- .panel -->

        </div> <!-- .col-lg-6 -->


    </div> <!-- .row -->


{% endblock %}
