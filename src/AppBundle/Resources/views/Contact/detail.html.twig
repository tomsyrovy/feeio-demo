{% extends "::layout-secured.html.twig" %}
{% set title = "Kontakt " ~ contact.data.title %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-contact-detail {{ parent() }}{% endblock %}

{% block content %}


    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-back btn-sm btn-default" title="Zpět" href="{{ path('app_contact_list') }}"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>
        </div> <!-- .col-lg-12 -->
    </div> <!-- .row -->


    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <h2><i class="fa fa-fw fa-briefcase"></i> {{ contact.data.title }}</h2>
                <span class="label label-primary"><i class="fa fa-fw fa-briefcase"></i> {{ contact.data.type.title }}</span>
                <span class="label label-default"><i class="fa fa-fw fa-building"></i> {{ contact.data.company.name }}</span>
            </div> <!-- .col-lg-6 -->

            <div class="col-lg-6 text-right">
                <a class="btn btn-header btn-default" title="Upravit" href="{{ path('app_contact_update', {'contact_id': contact.data.id}) }}"><i class="fa fa-fw fa-pencil"></i> Upravit</a>
            </div> <!-- .col-lg-6 -->
        </div> <!-- .row -->
    </div> <!-- .page-header -->



    <div class="row">
		<div class="col-lg-12">
			<ul class="nav nav-tabs">
				<li role="presentation" class="active">
                    <a href="#contact-info" aria-controls="contact-info" role="tab" data-toggle="tab">
                        Základní údaje
                    </a>
                </li>
