                        Statistika
                    </a>
                </li> -->
			</ul>
		</div> <!-- .col-lg-12 -->
	</div> <!-- .row -->





    <div class="panel panel-default panel-nav-tabs">
        <div class="panel-body">


            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="contact-info">
                    <div class="row">
                        <div class="col-lg-3 text-center">
                            <i class="fa fa-fw fa-briefcase fa-4x fa-contact-logo"></i>
                        </div> <!-- .col-lg-3 -->

                        <div class="col-lg-3">
                            <h2><small>{{ contact.data.title }}</small></h2>

                            IČ: {{ contact.data.vatnumber }}
                            <br>
                            DIČ: {{ contact.data.taxnumber }}
                        </div> <!-- .col-lg-3 -->


                        <div class="col-lg-3">
                            <h2><small>Adresa</small></h2>

                            {{ contact.data.street }}
                            {{ contact.data.number }}<br>
                            {{ contact.data.city }}
                            {{ contact.data.zipcode }}<br>
                            {{ contact.data.country.name }}
                        </div> <!-- .col-lg-3 -->

                        <div class="col-lg-3">
                            <h2><small>Kontaktní informace</small></h2>
                            {{ contact.data.website }}<br>
                            {{ contact.data.email }}<br>
                            {{ contact.data.telephone }}<br>
                            {{ contact.data.bankaccountnumber }}<br>
                            {{ contact.data.iban }}<br>
                        </div> <!-- .col-lg-3 -->


                    </div> <!-- .row -->
                </div> <!-- .tab-pane -->

