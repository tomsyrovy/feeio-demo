{{ form_start(form, {"attr" : {"class": "form-inline"}}) }}
    <div class="form-group">
        {{ form_widget(form.yearmonthFrom, {"attr" : {"class": "form-control"}}) }}
        {{ form_widget(form.yearmonthTo, {"attr" : {"class": "form-control"}}) }}
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-default"><i class="fa fa-fw fa-save"></i></button>
        {% if not isDefault %}
            <a class="btn btn-warning" href="{{ path('app_timewindow_reset') }}"><i class="fa fa-fw fa-eraser"></i></a>
        {% endif %}
    </div>
{{ form_end(form) }}
