{% extends "::layout-secured.html.twig" %}
{% set title = "Klienti" %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-contact-list {{ parent() }}{% endblock %}

{% block content %}


    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <h2><i class="fa fa-fw fa-briefcase"></i> Klienti</h2>
            </div> <!-- .col-lg-6 -->

            {% if canCreateContactBtn %}

                <div class="col-lg-6 text-right">
                    <a class="btn btn-header btn-warning" title="Vytvořit nového klienta" href="{{ path('app_client_create') }}">
                        <i class="fa fa-fw fa-plus"></i> Nový klient
                    </a>
                </div> <!-- .col-lg-6 -->

            {% endif %}

        </div> <!-- .row -->
    </div> <!-- .page-header -->

    {% if clients|length == 0 %}

        <div class="alert alert-warning" role="alert">
            Není zde žádný klient.
        </div> <!-- .alert -->

    {% else %}

        <div class="row">
            <div class="col-lg-12">

                <div class="panel panel-default">

                    <div class="table-responsive">

                        {% include "@App/Client/inc/list.html.twig" with {"clients" : clients} %}

                    </div> <!-- .table-responsive -->

                </div> <!-- .panel panel-default -->

            </div> <!-- .col-lg-12 -->
        </div> <!-- .row -->

    {% endif %}


{% endblock %}