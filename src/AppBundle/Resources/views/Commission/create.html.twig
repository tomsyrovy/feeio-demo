{% extends "::layout-secured-simple.html.twig" %}
{% set title = "Nová zakázka pro kampaň " ~ campaign.name %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-commission-create {{ parent() }}{% endblock %}

{% block content %}


    <div class="row">

        <div class="col-lg-12">
            <a class="btn btn-info" title="Zpět" href="{{ path('app_campaign_detail', {'campaign_id' : campaign.id}) }}"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>

            <div class="page-header text-center">
                <h2><i class="fa fa-fw fa-money"></i> {{ title }}</h2>
            </div>
        </div> <!-- .col-lg-12 -->


        {% include "@App/Commission/inc/commissionForm.html.twig" with {"form" : form, "submitLabel" : "Vytvořit"} %}

    </div> <!-- .row -->


{% endblock %}


{% block javascripts %}

    {{ parent() }}

    {% include '@App/Commission/inc/commissionFormJS.html.twig' %}

{% endblock %}
