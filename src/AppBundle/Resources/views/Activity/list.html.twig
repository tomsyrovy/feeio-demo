{% extends "::layout-secured.html.twig" %}
{% set title = "Aktivity ve společnosti " ~ company.name %}
{% block title %}{{ title }} {{ titleSeparator }} {{ parent() }}{% endblock %}
{% block body_class %}page-activity-list {{ parent() }}{% endblock %}

{% block content %}


        <div class="row">
			<div class="col-lg-12">
				<a class="btn btn-back btn-sm btn-default" title="Zpět" href="{{ path('app_company_detail', {'company_id': company.id}) }}"><i class="fa fa-fw fa-caret-left"></i> Zpět</a>
			</div> <!-- .col-lg-12 -->
		</div> <!-- .row -->


        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <h2><i class="fa fa-fw fa-briefcase"></i> {{ title }}</h2>
                </div> <!-- .col-lg-6 -->

                <div class="col-lg-6 text-right">
                    <a class="btn btn-header btn-warning" title="Vytvořit novou aktivitu" href="{{ path('app_activity_create', {'company_id': company.id}) }}">
                        <i class="fa fa-fw fa-plus"></i> Nová aktivita
                    </a>
                </div> <!-- .col-lg-6 -->

            </div> <!-- .row -->
        </div> <!-- .page-header -->





        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">

                <div class="panel panel-default">

                    <div class="table-responsive">
                        <table id="table-contacts" class="table table-hover user-table">
                            <thead>
                            <tr>
                                <th>
                                    Název
                                </th>
                                <th class="text-right">
                                    <!-- Akce -->
                                </th>
                            </tr>
                            </thead>

                            <tbody>

                            {% for activityDO in activityDOs %}

                                <tr class="contact-row">

                                    <td>
                                        {{ activityDO.activity.name }}
                                    </td>

                                    <td class="contact-action text-right">

                                        <a title="Upravit aktivitu" class="btn btn-sm btn-default" href="{{ path('app_activity_update', {'company_id': company.id, 'activity_id': activityDO.activity.id}) }}">
                                            <i class="fa fa-fw fa-pencil"></i>
                                        </a>

                                        {% if activityDO.canDelete %}
                                            <a title="Odstranit aktivitu" class="btn btn-sm btn-default" href="{{ path('app_activity_delete', {'company_id': company.id, 'activity_id': activityDO.activity.id}) }}">
                                                <i class="fa fa-fw fa-trash-o"></i>
                                            </a>
                                        {% endif %}

                                    </td>

                                </tr>

                            {% endfor %}

                            </tbody>
                        </table>
                    </div> <!-- .table-responsive -->



                </div> <!-- .panel panel-default -->




                <div class="row">
                    <div class="col-lg-6">

                    </div> <!-- .col-lg-6 -->

                    <div class="col-lg-6 text-right small">
                        Celkem aktivit: <span class="badge">{{ activityDOs|length }}</span>
                    </div> <!-- .col-lg-6 -->
                </div> <!-- .row -->

            </div> <!-- .col-lg-12 -->
        </div> <!-- .row -->


{% endblock %}