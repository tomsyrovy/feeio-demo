{% extends "layout-secured-simple.html.twig" %}
{% block body_class %}{% endblock %}
{% block body %}


	{% block navbar %}
		{% include '@App/include/navbar.html.twig' %}
	{% endblock %}





	{% block flashmessages %}
		{{ parent() }}
	{% endblock %}





	<div class="alert alert-dismissible alert-dismiss alert-js" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<span class="message"></span>
	</div> <!-- .alert -->





	{#{{ knp_menu_render('AppBundle:MenuBuilder:mainMenu') }}#}
	{#{{ cnerta_breadcrumb_render('AppBundle:MenuBuilder:mainMenu') }}#}





	<div class="{{ app.user.currentLayout }} content-container">
		{% block content %}{% endblock %}
	</div> <!-- .content-container -->





	<!-- ========== Intercom ========== -->
	<a class="intercom" data-toggle="tooltip" data-placement="left" title="Máš dotaz nebo jsi našel/a chybu?" href="mailto:issues@feeio.com?subject=Dotaz či chyba&amp;body=Myslím, že jsem ve Feeiu objevil/a chybu nebo bych se rád/a na něco zeptal:">
		<span class="fa-stack fa-lg">
				<i class="fa fa-circle fa-stack-2x"></i>
			<i class="fa fa-comments fa-stack-1x fa-inverse"></i>
		</span>
	</a> <!-- .intercom -->





	{% if app.environment == "prod" %}

		<script>
			window.intercomSettings = {
				app_id: "tcqmpe54",
				name: '{{ app.user.fullname }}', // Full name
				email: '{{ app.user.email }}', // Email address
				created_at: {{ app.user.signupAt|date("U") }}, // Signup date as a Unix timestamp
				user_id: '{{ app.user.id }}'
			};
		</script>

		<script>(function(){var w=window;var ic=w.Intercom;if(typeof ic==="function"){ic('reattach_activator');ic('update',intercomSettings);}else{var d=document;var i=function(){i.c(arguments)};i.q=[];i.c=function(args){i.q.push(args)};w.Intercom=i;function l(){var s=d.createElement('script');s.type='text/javascript';s.async=true;s.src='https://widget.intercom.io/widget/tcqmpe54';var x=d.getElementsByTagName('script')[0];x.parentNode.insertBefore(s,x);}if(w.attachEvent){w.attachEvent('onload',l);}else{w.addEventListener('load',l,false);}}})()</script>

	{% endif %}


{% endblock %}